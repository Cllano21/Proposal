---
//src/components/Card.astro
const {name, position, aboutMe, Proposal, linkedin, github, cvLink, profileImage } = Astro.props;

import '../styles/card.css';
---

<div class="container">
    <div class="card-container">
        <div class="descripcion">
            <h1>{name}</h1>
            <h2>{position}</h2>
            <p>{aboutMe}</p>
            <p>{Proposal}</p>
            </div>
        <div class="image">
            <img src={profileImage} alt="">
        </div>
    </div>
</div>